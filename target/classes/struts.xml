<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<constant name="struts.objectFactory" value="spring" /> 

	<package name="loginout" extends="struts-default" namespace="/">
		<action name="login" method="login" class="web.action.LoginAction">
			<result name="SUCCESS">index.jsp</result>
			<result name="INPUT">login.jsp</result>
		</action>
		
		<action name="logout" method="logout" class="web.action.LoginAction">
			<result name="INPUT">login.jsp</result>
		</action>
	</package>

	<package name="department" extends="struts-default">
		<action name="dept_add" method="save" class="web.action.DepartmentAction">
			<result name="SUCCESS">index.jsp</result>
			<result name="INPUT">login.jsp</result>
		</action>
	</package>
	
	<package name="admin" namespace="/admin" extends="struts-default">
		<action name="showUser" method="showUser" class="showUser">
    		<result name="SUCCESS">/pages.jsp</result>
		</action>
		
    </package>
    
    <package name="json" namespace="/" extends="struts-default,json-default" >  
        <action name="json" class="showUser" method="showUser">  
            <result name="SUCCESS" type="json">  
            	<param name="defaultEncoding">UTF-8</param> 
                <param name="root">pageBean</param>  
            </result>  
        </action> 
        <action name="test" class="userAction" method="test" >  
            <result name="SUCCESS" type="json">  
            	<param name="defaultEncoding">UTF-8</param> 
                <!-- <param name="root">tblUsers</param>   -->
            </result>  
        </action> 
    </package>  
</struts>    
